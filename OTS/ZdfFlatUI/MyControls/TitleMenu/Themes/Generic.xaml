<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:ZUI="clr-namespace:ZdfFlatUI">
    <SolidColorBrush x:Key="Brush" Color="#FF6D819A"/>
    <Style TargetType="{x:Type ZUI:ZTitleMenu}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>

        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Margin" Value="0,-32,120,0"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Background" Value="{StaticResource Brush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ZUI:ZTitleMenu}">
                    <Grid Background="#ffffff">
                        <Grid Background="{TemplateBinding Background}" ClipToBounds="True">
                            <ItemsPresenter HorizontalAlignment="Right"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>